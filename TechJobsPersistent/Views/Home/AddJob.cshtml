@using TechJobsPersistent.ViewModels;
@model AddJobViewModel;

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="JobName" class="form-control" />
        <span asp-validation-for="JobName"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedEmployerId">Employer</label>
        <select class="form-control" asp-for="SelectedEmployerId" asp-items="@Model.AllEmployersList"></select>
    </div>

    <div class="form-group">
        @foreach (var s in Model.Skills)
        {
            <label>@s.Name</label>
            <input type="checkbox" name="selectedSkills" value="@s.Id" />
        }
    </div>

    <input type="submit" value="Add Job" />
</form>

<p>Don't see the employer you're looking for? <a asp-controller="Employer" asp-action="Add">Add Employer</a>.</p>
<p>Don't see the skill you're looking for? <a asp-controller="Skill" asp-action="Add">Add Skill</a>.</p>

